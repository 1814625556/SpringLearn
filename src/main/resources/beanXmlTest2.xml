<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    	                   http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--p标签-->
     <bean id="complextest" class="cn.tianyu.beantest.dao.ComplexTest"
     p:age="24" p:name="chenchang" p:birthDay-ref="now"
     ></bean>
    <bean id="now" class="java.util.Date"></bean>

    <!--范围测试-->
    <bean id="scopedemo" class="cn.tianyu.beantest.dao.ScopeTest"
    scope="singleton"></bean>

    <!--复杂类型-->
    <bean id="complex2" class="cn.tianyu.beantest.dao.ComplexTest">

        <property name="age" value="26"></property>
        <property name="name" value="chenyuan"></property>
        <property name="birthDay" ref="now"></property>

        <property name="myStrs">
            <set>
                <value>AAA</value>
                <value>BBB</value>
                <value>CCC</value>
            </set>
        </property>

        <property name="myList">
            <array>
                <value>AAA</value>
                <value>BBB</value>
                <value>CCC</value>
            </array>
        </property>

        <property name="mySet">
            <list>
                <value>AAA</value>
                <value>BBB</value>
                <value>CCC</value>
            </list>
        </property>

        <property name="myMap">
            <props>
                <prop key="testF">FFF</prop>
                <prop key="testG">GGG</prop>
            </props>
        </property>

        <property name="myProps">
            <map>
                <entry key="testD" value="DDD"></entry>
                <entry key="testE">
                    <value>EEE</value>
                </entry>
            </map>
        </property>
    </bean>

</beans>